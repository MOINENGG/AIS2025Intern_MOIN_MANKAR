css

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    text-align: center;
    padding: 20px;
}

header {
    background: #007bff;
    color: white;
    padding: 15px;
}

.content {
    max-width: 800px;
    margin: auto;
}

img {
    width: 100%;
    height: auto;
    max-width: 800px;
}

/* Tablet (width < 768px) */
@media (max-width: 768px) {
    body {
        font-size: 18px;
    }

    header {
        padding: 10px;
    }
}

/* Mobile (width < 480px) */
@media (max-width: 480px) {
    body {
        font-size: 16px;
    }

    header {
        font-size: 18px;
        padding: 8px;
    }
}
